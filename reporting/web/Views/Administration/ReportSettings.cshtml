@using Syncfusion.Server.Base.Helpers

@{
    var globalAppSettings = _globalAppSettings;

    ViewBag.Title = "[[[Report Settings]]] - " + globalAppSettings.SystemSettings.OrganizationName;
    ViewBag.MessageBox = false;
    var makepublic = Convert.ToBoolean(ViewBag.ReportSettings);
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var helpSiteBaseUrl = ServerAppConfig.AppSettings.Documentation.BaseUri;
    var makePublicHelpSiteUrl = helpSiteBaseUrl + GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.ReportSiteSettings);
    var scheduleReportSettingsHelpSiteUrl = helpSiteBaseUrl + GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.ScheduleReportSettings);
    var customScheduleTemplateHelpSiteUrl = helpSiteBaseUrl + GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.CustomScheduleTemplate);
    var publicReportsDeprecateHelpSiteUrl = helpSiteBaseUrl + GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.PublicReportsDeprecated);
    var deploymentRreportsHelpSiteUrl = helpSiteBaseUrl + GlobalAppSettings.GetHelpSiteUrl(HelpSiteUrlNames.DeploymentReports);
    var reportSettingsPageNonce = Context.Items["ScriptNonce"];
    var showImportSampleData = Convert.ToBoolean(ViewBag.ShowImportSampleData);
    var isMasterSite = _globalAppSettings.SystemSettings.IsMaster;
}

@section styles{
    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/report-settings.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/report-settings.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/scheduleemaileditor.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/scheduleemaileditor.css")" crossorigin="anonymous" />
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/report-settings.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/report-settings.min.css")" crossorigin="anonymous" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/scheduleemaileditor.min.css" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/css/scheduleemaileditor.min.css")" crossorigin="anonymous" />
    </environment>
}

@section scripts{
    <environment include="Development,CloudDevelopment">
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/report-settings.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/report-settings.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/report-settings.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/report-settings.min.js")" crossorigin="anonymous"></script>
    </environment>
    <script nonce="@Context.Items["ScriptNonce"]" type="text/javascript">
        var getExportFileSettingInfoUrl = "@Url.Action("GetExportFileSettingInfo", "Scheduler")";
        var getScheduleFileSettingTypeUrl = "@Url.Action("GetScheduleFileSettingType", "Scheduler")";
        var subjectItem = "@Url.Action("GetSubjectItem", "scheduler")";
        var getScheduleContentUrl = "@Url.Action("GetScheduleCustomBody", "scheduler")";
        var validateFTPCredentialsUrl = "@Url.Action("ValidateFTPCredentials", "scheduler")";
        var validateS3BucketCredentialsUrl = "@Url.Action("ValidateS3Credentials", "scheduler")";
        var makePublicHelpSiteUrl = "@makePublicHelpSiteUrl";
        var scheduleReportSettingsHelpSiteUrl = "@scheduleReportSettingsHelpSiteUrl";
        var customScheduleTemplateHelpSiteUrl = "@customScheduleTemplateHelpSiteUrl";
        var publicReportsDeprecateHelpSiteUrl = "@publicReportsDeprecateHelpSiteUrl";
        var deploymentRreportsHelpSiteUrl = "@deploymentRreportsHelpSiteUrl";
        var enablePublic = @Json.Serialize(ServerAppConfig.EnablePublic);
        var deploymentItemDetails = @Html.Raw(Json.Serialize(ViewBag.DeploymentDashboard));
        var isMasterSite = @Json.Serialize(@isMasterSite);
        $("#select-report,#select-category").selectpicker();
    </script>
}

@section MainSection{

    @await Html.PartialAsync("_AdminMenu")

    <div id="dashboard-settings-container" role="tabpanel" class="col-12 admin-page-container">
        <div id="dashboard-settings-header" class="col-md-12 import-area admin-page-header">
            <hgroup class="col-md-6 col-sm-6 no-padding">
                <h1 class="h2 page-title">
                    [[[REPORT SETTINGS]]]
                </h1>
                <h5 class="page-description">
                    [[[Configuration for the Reports]]]
                </h5>
            </hgroup>
        </div>
        <div>
            <ul id="report-settings-tab-nav" class="nav nav-tabs" role="tablist">
                <li role="presentation" class="nav-item">
                    <a href="#make-public-setting-tab" id="make-public-setting" class="nav-link active" aria-controls="make-public-setting-tab" role="tab" data-bs-toggle="tab">[[[Report]]]</a>
                </li>
                <li role="presentation" class="nav-item">
                    <a href="#show-report-designer-setting-tab" id="report-designer-setting" class="nav-link" aria-controls="report-designer-setting-tab" role="tab" data-bs-toggle="tab">[[[Report Designer]]]</a>
                </li>
                <li role="presentation" class="nav-item">
                    <a href="#schedule-setting-tab" id="schedule-setting" class="nav-link" aria-controls="schedule-setting-tab" role="tab" data-bs-toggle="tab">[[[Schedule]]]</a>
                </li>
                <li role="presentation" class="nav-item">
                    <a href="#scheduletemplate-setting-tab" id="scheduletemplate-setting" class="nav-link" aria-controls="scheduletemplate-setting-tab" role="tab" data-bs-toggle="tab">[[[Custom Schedule Template]]]</a>
                </li>
                @if (isMasterSite)
                {
                    <li role="presentation" class="nav-item">
                        <a href="#deployment-reports-tab" id="deploymentreports" class="nav-link" aria-controls="deployment-reports-tab" role="tab" data-bs-toggle="tab">[[[Deployment Reports]]]</a>
                    </li>
                }
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="make-public-setting-tab">
                    <div id="dashboard-settings-body" class="admin-page-body">
                        <div class="row input-field-wrapper">
                            <div class="col-8 field-container-dashboard d-flex align-items-start">
                                <label class="col-md-4 app-textbox-label activation cls-margin-top">[[[Mark reports as public]]]</label>
                                <div class="col-md-4">
                                    <div class="d-flex flex-column align-items-start">
                                            <strong class="mb-1 notification-header" style="margin-left: 2px;">Allow</strong>
                                        <div class="d-flex align-items-center">
                                            <span class="material-switch me-2">
                                                    <input type="checkbox" id="restrict-makepublic-dashboard" @(makepublic ? "checked" : string.Empty) />
                                                <label for="restrict-makepublic-dashboard" class="label-primary"></label>
                                            </span>
                                            <div class="dropdown tool-tip no-caret">
                                                <span class="dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <span class="su su-info" title=""></span>
                                                </span>
                                                <div class="dropdown-menu p-2 small" role="menu">
                                                        [[[If disabled, anonymous users cannot open current public reports. Click on public ]]]
                                                        <a class="app-hyperlink" href="@Url.Action("reports", "reports", new { view="public"})">[[[reports]]]</a>
                                                        [[[to view them.]]]
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="schedule-setting-tab">
                    @await Html.PartialAsync("../Shared/_ScheduleExportFileSettings", reportSettingsPageNonce)
                </div>
                <div role="tabpanel" class="tab-pane" id="scheduletemplate-setting-tab">
                    @await Html.PartialAsync("../Shared/_EmailEditor")
                </div>
                <div role="tabpanel" class="tab-pane" id="show-report-designer-setting-tab">
                    <div id="dashboard-settings-body" class="admin-page-body">
                        <div class="row input-field-wrapper no-padding">
                            <div class="row">
                                <div class="row col-8 field-container-dashboard">
                                    <label class="col-md-4 app-textbox-label activation">
                                        [[[Show Sample Data]]]
                                    </label>
                                    <div class="col-md-2 d-flex align-items-center justify-content-center gap-2">
                                        <span class="material-switch text-left">
                                            <input type="checkbox" id="show-sample-data-option" @(showImportSampleData ? "checked" : string.Empty) />
                                            <label for="show-sample-data-option" class="label-primary"></label>
                                        </span>
                                        <div class="tool-tip col-md-1">
                                            <span class="dropdown-bs-toggle" data-bs-toggle="dropdown"><span class="su su-info" title=""></span></span>
                                            <div class="dropdown-menu" role="menu">[[[If disabled, Import Sample Data option will not be shown in Report Designer.]]]</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="deployment-reports-tab">
                    @await Html.PartialAsync("_DeploymentReports")
                </div>
            </div>
        </div>
        <div class="admin-page-actions col-12">
            <a href="@Url.Action("reports", "reports")" class="secondary-button app-btn-secondary float-end" id="cancel-dashboard-settings" title="">[[[Cancel]]]</a>
            <input type="button" title="" data-url="@Url.Action("UpdateReportSettings", "administration")" id="update-dashboard-settings" class="primary-button app-btn-primary float-end" value="[[[Save]]]" />
            <input type="button" title="" data-url="@Url.Action("UpdateScheduleSettings", "administration")" id="update-schedule-settings" style="display: none;" class="primary-button app-btn-primary float-end" value="[[[Save]]]" />
            <input type="button" title="" data-url="@Url.Action("UpdateEmailContent", "administration")" id="update-scheduletemplate-settings" style="display: none;" class="primary-button app-btn-primary float-end" value="[[[Save]]]" />
            <input type="button" title="" data-url="@Url.Action("UpdateReportDesignerSettings", "administration")" id="update-report-designer-settings" style="display: none;" class="primary-button app-btn-primary float-end" value="[[[Save]]]" />
        </div>
        @await Html.PartialAsync("_AddDeploymentReport")
    </div>
    <environment include="Development,CloudDevelopment">
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/scheduleemaileditor.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/scheduleemaileditor.js")" crossorigin="anonymous"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/scheduleemaileditor.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/scheduleemaileditor.min.js")" crossorigin="anonymous"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
    </environment>
}
