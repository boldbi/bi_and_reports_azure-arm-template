<div id="add-deployment-report" style="display:none">
    <form class="col-lg-12 no-padding" id="dialog-container" autocomplete="off">
        <div class="modal-body col-12 no-padding form">
            <div id="deployment-category-container" class="col-12 no-padding deployment-dropdown-container">
                <label class="col-4 col-lg-4 text-left margin-down no-padding">[[[Source Category]]]<span class="mandatory">*</span></label>
                <div class="col-6 col-lg-6  no-padding items-name-dropdown pull-right">
                    <select class="selectpicker form-control select-override-selector" id="select-category" data-size="5" data-live-search="true" title="[[[Select category]]]" data-none-results-text="[[[No results match]]]">
                        <option value="" selected="selected" disabled="disabled">[[[Select category]]]</option>
                    </select>
                    <span id="invalid-category-selector" style="display:none; color:red;" class="display">[[[Please select the category]]]</span>
                </div>
            </div>
            <div id="deployment-report-container" class="col-12 no-padding deployment-dropdown-container">
                <label class="col-4 col-lg-4 text-left margin-down no-padding">[[[Source Report]]]<span class="mandatory">*</span></label>
                <div class="col-6 col-lg-6 no-padding items-name-dropdown pull-right">
                    <select class="selectpicker form-control select-override-selector" id="select-report" data-size="5" data-live-search="true" title="[[[Select report]]]" data-none-results-text="[[[No results match]]]">
                        <option value="" selected="selected" disabled="disabled">[[[Select report]]]</option>
                    </select>
                    <span id="invalid-dashboard-selector" style="display:none; color:red;" class="display">[[[Please select the report]]]</span>
                </div>
            </div>
            <div class="col-12 category-dashboard-name-fields">
                <div class="col-12 deployment-field-container">
                    <label class="col-6 col-lg-6 text-left">[[[Category name for deployment site]]]<span class="mandatory">*</span></label>
                    <div class="col-6 col-lg-6">
                        <input type="text" id="destination-category-name" data-maxlength="255" class="form-control  validation select-override-input float-end" name="category-name" />
                        <span id="invalid-category" class="useradd-validation-messages" style="color:red;"></span>
                    </div>
                </div>
                <div class="col-12 deployment-field-container">
                    <label class="col-6 col-lg-6 text-left">[[[Report name for deployment site]]]<span class="mandatory">*</span></label>
                    <div class="col-6 col-lg-6">
                        <input type="text" id="destination-name" data-maxlength="255" class="form-control  validation select-override-input float-end" name="dashboard-name" />
                        <span id="invalid-destination" class="useradd-validation-messages" style="color:red;"></span>
                    </div>
                </div>
                <div class="col-6 col-lg-6 float-end use-selected-item-names">
                    <div id="use-selected-category-report-name" class="pad-enable display-inline float-end">
                        @Html.CheckBox("selected-category-report-name", new { @class = "material-checkbox  float-start" })
                        @Html.Hidden("selected-category-report-name")
                        @Html.Label("selected-category-report-name", "[[[Use the source category and report name.]]]", new { @id = "selected-category-dashboard-name", @style = "padding: 5px 0 0 25px !important;" })
                    </div>
                </div>
            </div>
            <div class="col-12 no-padding deployment-field-container description-textarea">
                <label class="col-6 col-lg-6 text-left margin-down no-padding">[[[Description]]]</label>
                <div class="col-6 col-lg-6 no-padding description-destination">
                    <textarea id="description" name="destination-description" class="form-control  validation select-override-description float-end" data-maxlength="1024"></textarea>
                    <span id="invalid-category" class="useradd-validation-messages" style="color:red;"></span>
                </div>
            </div>
        </div>
        <div id="add-deployment-report" class="col-12 no-padding dashboard-edit-container">
            <div class="pad-enable display-inline">
                @Html.CheckBox("enable-report", new { @class = "material-checkbox float-start" })
                @Html.Hidden("enable-report")
                @Html.Label("enable-report", "[[[Lock report editing in published site.]]]", new { @id = "dashboard-label", @style = "padding: 5px 0 0 25px !important;" })
            </div>
        </div>
        <div id="add-datasource-report" class="col-12 no-padding datasource-edit-container">
            <div class="pad-enable display-inline">
                @Html.CheckBox("enable-datasource", new { @class = "material-checkbox float-start" })
                @Html.Hidden("enable-datasource")
                @Html.Label("enable-datasource", "[[[Lock data source editing in published site.]]]", new { @id = "datasource-label", @style = "padding: 5px 0 0 25px !important;" })
            </div>
        </div>

        <div id="add-dataset-report" class="col-12 no-padding dataset-edit-container">
            <div class="pad-enable display-inline">
                @Html.CheckBox("enable-dataset", new { @class = "material-checkbox float-start" })
                @Html.Hidden("enable-dataset")
                @Html.Label("enable-dataset", "[[[Lock dataset editing in published site.]]]", new { @id = "dataset-label", @style = "padding: 5px 0 0 25px !important;" })
            </div>
        </div>

        <div id="make-dashboard-public-report" class="col-12 no-padding make-dashboard-public">
            <div class="pad-enable display-inline">
                @Html.CheckBox("make-public", new { @class = "material-checkbox float-start" })
                @Html.Hidden("make-public")
                @Html.Label("make-public", "[[[Make report as public in published site.]]]", new { @id = "make-report-public-label", @style = "padding: 5px 0 0 25px !important;" })
            </div>
        </div>
    </form>
</div>