@using Syncfusion.Server.Base.Helpers

<!DOCTYPE html>
@{
    Layout = null;
    var isSuccess = ViewData["IsSuccess"] != null ? Convert.ToBoolean(ViewData["IsSuccess"]) : false;
    var globalAppSettings = _globalAppSettings;
    var reportServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
    var fileUploadTypes = new List<SelectListItem>
    {
        new SelectListItem { Value = "0", Text = "[[[PDF]]]", Selected = true },
        new SelectListItem { Value = "1", Text = "[[[e-signature]]]" },
        new SelectListItem { Value = "2", Text = "[[[Stylesheet]]]" }
    };
}
<html class="report-server">
@if (isSuccess == false)
{

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0">
    <title>
        @ViewBag.Title
    </title>

    <style>
        [contentEditable=false]:empty:not(:focus):before {
            content: attr(data-text);
        }
    </style>

    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.css" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/add-files.css" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/add-files.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/add-files.js")" crossorigin="anonymous"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/css/theme/light.min.css" />
        <link rel="stylesheet" asp-append-version="true" href="@reportServerResourceUrl/cdn/cdn/css/add-files.min.css" />
        <link rel="stylesheet" asp-append-version="true" href="@ServerAppConfig.CustomFontUrl(globalAppSettings?.SystemSettings?.FontPreference, reportServerResourceUrl)" />
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="~/js/localizationcontent.js?c=@System.Globalization.CultureInfo.CurrentCulture"></script>
        <script nonce="@Context.Items["ScriptNonce"]" asp-append-version="true" src="@reportServerResourceUrl/cdn/scripts/add-files.min.js" integrity="@IntegrityTagHelper.GetIntegrity("wwwroot/cdn/scripts/add-files.min.js")" crossorigin="anonymous"></script>
    </environment>
  
    <script nonce="@Context.Items["ScriptNonce"]">
        var fileUploadUrl = "@Url.Action("FileUpload", "Files")";
        var isFileExistUrl = "@Url.Action("IsItemnameExists", "Files")";
        
        $(document).ready(function () {
            load();

            $(document).on("click", ".PopupClose", function (e) {
                e.preventDefault();
                $("#addFileDom").find("iframe").contents().find("html").html("");
                eDialog = parent.$("#addFileDom").data("ejDialog");
                eDialog.close();
            });
        });
        function load() {
            $('[data-bs-toggle="tooltip"]').tooltip();
            if (($(parent.window).width()) > 1400) {
                $(".dialog").addClass("iframe");
            }

            if (($(parent.window).width()) < 1400) {
                $(".dialog").removeClass("iframe");
            }
        }
    </script>
</head>
    <body>
        <form name="addItemForm" id="addItemForm" enctype="multipart/form-data" autocomplete="off">
            @Html.AntiForgeryToken()
            <div id="PopupContainer" class="col-lg-12 no-padding dialog">
                <div class="col-12 dialog-header">
                    <span class="su su-document Head-icon"></span>
                    <span class="PopupTitle">[[[Upload File]]]</span>
                    <a href="#" title="Close" data-bs-toggle="tooltip" data-bs-placement="bottom" class="PopupClose"><span class="su su-close"></span></a>
                </div>

                <div class="dialog-body file-content-height col-12 no-padding">
                    <div id="general-file-container">
                        <table width="100%" cellspacing="10px" cellpadding="0" border="0">
                            <tbody>
                                <tr>
                                    <td class="col-md-2">
                                        <div class="bottom-margin30 float-end">[[[File Type]]]</div>
                                    </td>
                                    <td class="col-md-10">
                                        @Html.DropDownList("upload_file_type", fileUploadTypes, new { @class = "selectpicker form-control bottom-margin30", id = "upload-file-type" })
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-md-2">
                                        <div class="bottom-margin30 float-end">[[[Name]]]<span class="mandatory">*</span></div>
                                    </td>
                                    <td class="col-md-10">
                                        <span>
                                            <input type="text" id="file_name" autofocus name="fileName" maxlength="255" class="form-control bottom-margin30 text" tabindex="1">
                                            <span id="validate-name" class="validation-message text"></span>
                                            <div id="plugin_validation" class="validation-message text"></div>
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-2">
                                        <div class="bottom-margin30 float-end">[[[File]]]<span class="mandatory">*</span></div>
                                    </td>
                                    <td class="col-10">
                                        <div class="input-group no-padding imagepath" id="file-upload-input-container">
                                            <input type="text" class="form-control text-field upload-file bottom-margin30 text" id="filename" value="[[[Browse file path]]]" name="uploadedFileName" readonly tabindex="-1"/>
                                            <label for="browse_file" class="trigger-file-input-wrapper"></label>
                                            <div class='fileUpload btn btn-default'>
                                                <span>...</span><input type="file" id="browse_file" title="[[[No file selected]]]." class="browse-button upload-btn" name="file" tabindex="-1">
                                            </div>
                                            <span class="notification help-text">
                                                <span class="help-text-mandatory">*</span>[[[Maximum:20 MB]]]
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-2">
                                        <div class="bottom-margin30 locale-label float-end"></div>
                                    </td>
                                    <td>
                                        <div id="validate-file" class="col-10 validation-message text"></div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="dialog-footer">
                    <div class="float-end">
                        <input type="button" title="" class="btn primary-button app-btn-primary" id="publish-file" tabindex="4" value="[[[Add]]]" />
                        <input type="button" title="" class="btn secondary-button app-btn-secondary" id="cancelAddFile" value="[[[Cancel]]]" tabindex="5">
                        <input type="submit" class="hide-content" style="display: none;" />
                    </div>
                </div>
            </div>
        </form>
    </body>
}
</html>