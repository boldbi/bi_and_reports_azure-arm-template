@{
    Layout = null;
    var canCreateCategory = ViewBag.CanCreateCategory != null ? ViewBag.CanCreateCategory : false;
    var globalAppSettings = _globalAppSettings;
    var dashboardServerResourceUrl = globalAppSettings.SystemSettings.CDNLink.TrimEnd('/');
}
<!DOCTYPE html>
<head>
    <title>[[["Create Slideshow"]]]</title>
    <script>
                var checkSlideshowNameExistUrl = "@Url.Action("IsslideshowNameExist", "Slideshow")";
                var createSlideShowUrl = "@Url.Action("AddSlideshow", "Slideshow")";
                var getCreateSlideShowDetailUrl = "@Url.Action("GetCreateSlideshowDetail", "Slideshow")";
                var geteditSlideshowDetailUrl = "@Url.Action("GetEditSlideshowDetail", "Slideshow")";
                var checkMultiTabDashboardNameExistUrl = "@Url.Action("IsMultiTabDashboardNameExist", "Slideshow")";
                var createMultiTabDashboardUrl = "@Url.Action("AddMultiTabDashboard", "Reports")";
                var editMultiTabDashboardUrl = "@Url.Action("EditMultiTabDashboard", "Reports")";
                var getCreateMultiTabDashboardDetailUrl = "@Url.Action("GetCreateMultiTabDashboardDetail", "Slideshow")";
                var geteditMultiTabDashboardDetailUrl = "@Url.Action("GetEditMultiTabDashboardDetail", "Slideshow")";
                var canCreateCategory = @Json.Serialize(canCreateCategory);
                $(document).ready(function () {
                    $("#select-multitab-category").selectpicker('destroy');
                    $("#select-multitab-category").selectpicker();
                    $("#select-multitab-category").selectpicker('destroy');
                    $("#select-multitab-category").selectpicker();
            });
    </script>
    @*    @await Html.PartialAsync("~/Views/Shared/_BaseFontStyleSheet.cshtml")
*@    <environment include="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/create-slideshow.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/create-slideshow.js"></script>
    </environment>
    <environment exclude="Development,CloudDevelopment">
        <link rel="stylesheet" asp-append-version="true" href="@dashboardServerResourceUrl/cdn/css/create-slideshow.min.css" />
        <script asp-append-version="true" src="@dashboardServerResourceUrl/cdn/scripts/create-slideshow.min.js"></script>
    </environment>
    @await Html.PartialAsync("~/Views/Shared/_LoaderIcon.cshtml")
</head>
<div class="overflow-none create-presentation-popup" id="create-presentation-container">
    <div class="modal col-12 no-padding" tabindex="-1" role="dialog" style="display:none">
        <div class="modal-dialog col-12 popup-header no-padding" role="document">
            <div class="modal-content no-padding col-12" id="slideshow-popup-container" data-spy="scroll">
                <div class="col-12 modal-header no-padding">
                    <div class="col-11 no-padding">
                        <span id="multitab-icon" class="su su-multi-tabbed"></span>
                        <span class="modal-title popup-title slideshow-popup-title ellipsis col-10" data-container='presentation-container'>[[[Create Slideshow]]]</span>
                    </div>
                    <div class="col-1 no-padding float-end">
                        <a href="#" title="[[[Close]]]" data-bs-toggle='tooltip' data-bs-placement="left" class="create-presentation-popup-close float-end popup-close">
                            <span class="su su-close"></span>
                        </a>
                    </div>
                </div>
                <div class="modal-body col-12 no-padding">
                    <div id="presentation-container" class="col-12 create-presentation-container no-padding">
                        <div class="col-5 slideshow-name form-row no-padding">
                            <span class="form-label col-12">
                                [[[Name]]]
                                <span class="mandatory">*</span>
                            </span>
                            <span class="form-field col-12">
                                <input type="text" id="slideshow-name" autofocus name="slideshowName" class="form-control text" tabindex="1" data-maxlength="255">
                                <span id="name-validation-message" style="display:none" class="ErrorMessage"></span>
                            </span>
                        </div>
                        <div class="col-6 category-field form-row no-padding">
                            <span class="form-label col-12">
                                [[[Category]]]
                                <span class="mandatory">*</span>
                            </span>
                            <span class="form-field col-12">
                                <input id="select-multitab-category" style="width: 100%; margin-bottom: 15px;" />
                                @*@if (canCreateCategory)
                                {
                                    <span class="input-group-btn no-padding" style="vertical-align: top" id="add-new-category">
                                        <button class="btn btn-default" type="button" title="[[[Add new Category]]]" data-toggle="tooltip"><span class="su-add"></span></button>
                                    </span>
                                }*@
                                <span id="multi-tab-category-validation-message" style="display:none" class="ErrorMessage"></span>
                            </span>
                        </div>
                        <div class="col-7 duration-field form-row no-padding">
                            <span class="form-label col-12">
                                [[[Duration (Min: 5 & Max: 300 secs)]]]
                                <span class="mandatory">*</span>
                            </span>
                            <span class="form-field col-12">
                                <input id="loop_interval" type="text" name="duration" class="form-control text" tabindex="2" min="5" max="300" maxlength="3">
                                <span id="duration-validation-message" style="display:none" class="ErrorMessage"></span>
                            </span>
                        </div>
                        <div class="col-12">
                            <div class="col-12 no-padding display-dashboard">
                                <div id="add-dashboard-widgets" class="col-12 no-padding">
                                    <div class="col-12 add-dashboard-widgets-button">
                                        <a class="add-button-content" href="#" tabindex="3">
                                            <span class="su su-add"></span>
                                            <span class="add-btn-text">[[[Add Reports]]]</span>
                                        </a>
                                    </div>
                                    <div class="item-dropdown-container col-12 no-padding" style="display: none">
                                        <div id="item-dropdowns" class="col-10 no-padding">
                                            <div class="form-field col-3 item-type-dropdown">
                                                <select class="selectpicker" id="select_type" style="width: 100%; margin-bottom: 15px;">
                                                    <option value="@((int)ItemType.Report)" selected="selected">[[[Dashboards]]]</option>
                                                </select>
                                            </div>
                                            <div class="form-field col-4 slide-category-dropdown">
                                                @* <select class="selectpicker" id="select_category" data-size="5" data-live-search="true" title="[[[Select category]]]" style="width: 100%; margin-bottom: 15px;" data-none-results-text="[[[No results match]]]">
                                                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select category]]]</option>
                                                </select> *@
                                                <input id="select_category" style="width: 100%; margin-bottom: 15px;" />
                                            </div>
                                            <div class="form-field slide-dashboard-dropdown col-5" style="display: none">
                                                <select class="selectpicker" id="select_dashboard" data-size="5" data-live-search="true" title="[[[Select report]]]" style="width: 100%; margin-bottom: 15px;" data-none-results-text="[[[No results match]]]">
                                                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select report]]]</option>
                                                </select>
                                            </div>
                                            <div class="form-field slide-childdashboard-dropdown col-4" style="display: none">
                                                <select id="select_childdashboard" data-live-search="true" title="[[[Select tab]]]" name="childdashboardId" class="selectpicker" data-size="5" data-none-results-text="[[[No results match]]]">
                                                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select tab]]]</option>
                                                </select>
                                            </div>
                                            <div class="form-field slide-view-dropdown col-4" style="display: none">
                                                <select id="select_view" data-live-search="true" title="[[[Select view]]]" name="childdashboardId" class="selectpicker" data-size="5" data-none-results-text="[[[No results match]]]">
                                                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select view]]]</option>
                                                </select>
                                            </div>
                                            <div class="form-field slide-widget-dropdown col-5" style="display: none">
                                                <select class="selectpicker" id="select_widget" data-size="5" data-live-search="true" title="[[[Select widget]]]" style="width: 100%; margin-bottom: 15px;" data-none-results-text="[[[No results match]]]">
                                                    <option value="" selected="selected" class="hide-option" disabled="disabled">[[[Select Widget]]]</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-field col-1" id="add-slide-button-container">
                                            <input type="button" id="add-slide-button" title="[[[Add]]]" class="primary-button float-end" disabled value="Add" />
                                        </div>
                                        <div class="col-12 no-padding">
                                            <span id="duplicate-item-validation-message" style="display:none" class="ErrorMessage"></span>
                                        </div>
                                    </div>
                                </div>
                                <div id="show-content" class="col-12 no-padding"></div>
                                <ul id="sortable" class="col-12 display-dashboard-container no-padding"></ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer col-12 no-padding">
                    <div class="col-12 margin-top">
                        <input type="button" title="" class="btn btn-primary" style="display:none" id="edit-slideshow" disabled onclick="editSlideshowMethod()" tabindex="4" value="Save">
                        <input type="button" title="" class="btn btn-primary" id="create-slideshow" disabled onclick="createSlideshowMethod()" tabindex="4" value="Create">
                        <input type="button" title="" class="btn secondary-button app-btn-secondary" id="cancel-slideshow" value="Cancel" tabindex="5">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>